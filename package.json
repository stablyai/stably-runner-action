{
  "name": "stably-runner-action",
  "description": "Use this Github action to run tests on https://stably.ai/",
  "version": "0.0.0",
  "author": "Stably",
  "private": true,
  "homepage": "https://github.com/stablyai/stably-runner-action#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stablyai/stably-runner-action.git"
  },
  "bugs": {
    "url": "https://github.com/stablyai/stably-runner-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run check:fix && npm run test && npm run package",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json,yml,yaml,md}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@actions/http-client": "^3.0.0",
    "@stablyhq/runner-sdk": "^1.0.8",
    "ts-dedent": "^2.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/jest": "^29.5.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24",
    "@vercel/ncc": "^0.38.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "make-coverage-badge": "^1.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3"
  }
}
