{
  "name": "stably-runner-action",
  "description": "Use this Github action to run tests on https://stably.ai/",
  "version": "0.0.0",
  "author": "Stably",
  "private": true,
  "homepage": "https://github.com/stablyhq/stably-runner-action#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stablyhq/stably-runner-action.git"
  },
  "bugs": {
    "url": "https://github.com/stablyhq/stably-runner-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write .",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/http-client": "^2.2.3",
    "@stablyhq/runner-sdk": "^1.0.6",
    "ts-dedent": "^2.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.53.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
